{% extends 'base.html.twig' %}

{% block body %}
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-main">
                    <span class="sr-only">Desplegar navegación</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('frontpage') }}">
                    {% block navbartitle %}{{ app_name }}{% endblock %}
                </a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-main">
                {% if not app.user %}
                    <a href="{{ path('login') }}" class="btn btn-default navbar-btn pull-right">Entrar en la aplicación</a>
                {% else %}
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-user"></i> Conectado como {{ app.user.person }} <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="{{ path('personal_form') }}"><i class="fa fa-cog"></i> Modificar datos personales</a></li>
                                {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                                    <li class="divider"></li>
                                    <li><a href="{{ path('frontpage', {'_switch_to': '_exit'}) }}"><i class="fa fa-user-secret"></i> Volver al usuario normal</a></li>
                                {% endif %}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <li class="divider"></li>
                                    <li><a href="{{ path('admin_menu') }}"><i class="fa fa-wrench"></i> Administrar la plataforma</a></li>
                                {% endif %}
                                <li class="divider"></li>
                                <li><a href="{{ path('logout') }}"><i class="fa fa-power-off"></i> Salir de la aplicación</a></li>
                            </ul>
                        </li>
                    </ul>
                {% endif %}
            </div>
        </div>
    </nav>
    <div class="container">
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-danger alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% block content %}{% endblock %}
    </div>
{% endblock %}
