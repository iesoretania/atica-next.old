{% trans_default_domain 'menu' %}
{% extends 'base.html.twig' %}

{% block title %}
    {% if title is defined and title is not empty %}
        {{ title }} -
    {% elseif breadcrumb is defined %}
        {{ ((breadcrumb|last).caption)|trans }} -
    {% endif %}
    {{- user_extension.currentOrganization ? user_extension.currentOrganization.name }}
{%- endblock %}

{% block body %}
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-main">
                    <span class="sr-only">{{ 'navbar.expand'|trans }}</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('frontpage') }}">
                    {% block navbartitle %}{{ user_extension.currentOrganization ? user_extension.currentOrganization.name : app_name }}{% endblock %}
                </a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-main">
                {% for order, item in menu|default(menu_extension.menu) %}
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-fw fa-{{ item.icon }}"></i> {{ item.caption|trans }}<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                {% for child in item.children %}
                                <li><a href="{{ path(child.routeName, child.routeParams) }}"><i class="fa fa-fw fa-{{ child.icon }}"></i> {{ child.caption|trans }}{% if child.routeName == app.request.get('_route') %} <i class="fa fa-fw fa-check"></i>{% endif %}</a></li>
                                {% endfor %}
                            </ul>
                        </li>
                    </ul>
                {% endfor %}

                {% if not app.user %}
                    <a href="{{ path('login') }}" class="btn btn-default navbar-btn pull-right">Entrar en la aplicaci贸n</a>
                {% else %}
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-user"></i> {{ 'navbar.logged.as'|trans({'{{ user }}': app.user.person }) }}<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="{{ path('personal_form') }}"><i class="fa fa-cog"></i> {{ 'menu.personal'|trans }}</a></li>
                                {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                                    <li class="divider"></li>
                                    <li><a href="{{ path('frontpage', {'_switch_to': '_exit'}) }}"><i class="fa fa-user-secret"></i> {{ 'menu.impersonate.exit'|trans }}</a></li>
                                {% endif %}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <li class="divider"></li>
                                    <li><a href="{{ path('admin_menu') }}"><i class="fa fa-wrench"></i> {{ 'menu.manage'|trans }}</a></li>
                                {% endif %}
                                <li class="divider"></li>
                                <li><a href="{{ path('logout') }}"><i class="fa fa-power-off"></i> {{ 'menu.logout'|trans }}</a></li>
                            </ul>
                        </li>
                    </ul>
                {% endif %}
            </div>
        </div>
    </nav>
    <div class="container">
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-danger alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% if breadcrumb is defined %}
            {% include 'breadcrumb.html.twig' %}
        {% endif %}
        {% if title is defined %}
            <h1 class="well">{{ ((title is null and breadcrumb is defined) ? (breadcrumb|last).caption|trans : title) }}</h1>
        {% endif %}
        {% block content %}{% endblock %}
    </div>

    <footer class="footer no-print" role="contentinfo">
        <div class="container">
            {% block footer %}
                <p class="text-muted">
                    &copy; 2015-{{ 'now'|date('Y') }}, Luis Ram贸n L贸pez L贸pez
                </p>
            {% endblock %}
        </div>
    </footer>
{% endblock %}
