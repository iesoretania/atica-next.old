{% trans_default_domain 'menu' %}
{% extends 'base.html.twig' %}

{% block title %}
    {% if title is defined and title is not empty %}
        {{ title }} -
    {% elseif breadcrumb is defined %}
        {{ ((breadcrumb|last).caption)|trans }} -
    {% endif %}
    {{- app.session.get('organization') }}
{%- endblock %}

{% block body %}
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-main">
                    <span class="sr-only">{{ 'navbar.expand'|trans }}</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('frontpage') }}">
                    {% block navbartitle %}{{ app.session.get('organization', app_name) }}{% endblock %}
                </a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-main">
                {% if not app.user %}
                    <a href="{{ path('login') }}" class="btn btn-default navbar-btn pull-right">Entrar en la aplicaci√≥n</a>
                {% else %}
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-user"></i> {{ 'navbar.logged.as'|trans({'{{ user }}': app.user.person }) }}<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="{{ path('personal_form') }}"><i class="fa fa-cog"></i> {{ 'menu.personal'|trans }}</a></li>
                                {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                                    <li class="divider"></li>
                                    <li><a href="{{ path('frontpage', {'_switch_to': '_exit'}) }}"><i class="fa fa-user-secret"></i> {{ 'menu.impersonate.exit'|trans }}</a></li>
                                {% endif %}
                                {% if is_granted('ROLE_ADMIN') %}
                                    <li class="divider"></li>
                                    <li><a href="{{ path('admin_menu') }}"><i class="fa fa-wrench"></i> {{ 'menu.manage'|trans }}</a></li>
                                {% endif %}
                                <li class="divider"></li>
                                <li><a href="{{ path('logout') }}"><i class="fa fa-power-off"></i> {{ 'menu.logout'|trans }}</a></li>
                            </ul>
                        </li>
                    </ul>
                {% endif %}
            </div>
        </div>
    </nav>
    <div class="container">
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="alert alert-danger alert-dismissable" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar"><span aria-hidden="true">&times;</span></button>
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% if breadcrumb is defined %}
            <ol class="breadcrumb">
                {% spaceless %}
                    <li><a href="{{ path('frontpage') }}"><i class="fa fa-home fa-2x"></i></a></li>
                    {% for item in breadcrumb %}
                        <li>
                            {%- if item.path is defined %}<a href="{{ path(item.path) }}">{% endif -%}
                                {%- if item.icon is defined %}<i class="fa fa-{{ item.icon }}"></i>{% endif -%}
                                {%- if item.caption is defined %}{{- item.caption|trans -}}{% endif %}{{- item.fixed|default('') -}}
                            {%- if item.path is defined %}</a>{% endif -%}
                        </li>
                    {%- endfor %}
                {% endspaceless %}
            </ol>
        {% endif %}
        {% if title is defined %}
            <h1 class="well">{{ ((title is null and breadcrumb is defined) ? (breadcrumb|last).caption|trans : title) }}</h1>
        {% endif %}
        {% block content %}{% endblock %}
    </div>
{% endblock %}
