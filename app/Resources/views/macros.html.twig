{% macro paginator_th(pagination, class, field, caption) %}
    <th class="{{ class }} {% if pagination.isSorted(field) %}sorted{% endif %}">{{ knp_pagination_sortable(pagination, caption, field) }}</th>
{% endmacro %}

{% macro paginator_stats(pagination) %}
    {{ 'showing'|trans({
        '%first%': (pagination.getCurrentPageNumber-1)*pagination.getItemNumberPerPage+1,
        '%last%': min((pagination.getCurrentPageNumber)*pagination.getItemNumberPerPage, pagination.getTotalItemCount),
        '%total%': pagination.getTotalItemCount }, 'messages') }}
{% endmacro %}

{% macro submit_button(caption, icon = null, class = 'btn-success') %}
    <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <button type="submit" class="btn {{ class }}">{% if icon %}<i class="fa fa-{{ icon }}"></i> {% endif %}{{ caption }}
            </button>
        </div>
    </div>
{% endmacro %}
