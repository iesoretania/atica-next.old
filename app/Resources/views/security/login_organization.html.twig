{% trans_default_domain "security" %}
{% extends ':security:login_base.html.twig' %}

{% block title %}{{ 'form.organization.title'|trans }}{% endblock %}

{% block login_title %}{{ 'form.organization.title'|trans }}{% endblock %}

{% block login_content %}
<form method="post" action="{{ path('login_organization') }}" role="form">
    <div class="form-group">
        {% for membership in app.user.memberships %}
            <div class="radio">
                <label>
                    <input type="radio" name="organization" id="organization" value="{{ membership.organization.id }}" {% if loop.first or membership.organization == app.user.defaultOrganization %} checked="" autofocus=""{% endif %}>
                    {{ membership.organization.name }}{% if membership.isLocalAdministrator %} <i class="fa fa-wrench"></i>{% endif %}
                </label>
            </div>
        {% endfor %}
    </div>
    <div class="form-group">
        <button type="submit" name="login" class="btn btn-info btn-block" tabindex="4">{{ 'form.organization.submit'|trans }}</button>
    </div>
</form>
{% endblock %}
