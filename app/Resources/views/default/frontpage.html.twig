{% trans_default_domain 'menu' %}
{% extends 'layout.html.twig' %}
{% block title 'menu.title'|trans %}
{% block content %}
    <section class="row tile-row">
        <article class="col-md-4 tile tile-col-4 tile-purple">
            <a class="tile-link" href="{{ path('personal_form') }}">
                <div class="tile-icon-holder">
                    <i class="fa fa-cog fa-4x"></i>
                </div>
                <div class="text-holder">
                    <h4>{{ 'menu.personal' | trans }}</h4>
                    <p>{{ 'menu.personal.detail' | trans }}</p>
                </div>
            </a>
        </article>
        {% if is_granted('ROLE_ADMIN') %}
        <article class="col-md-4 tile tile-col-4 tile-teal">
            <a class="tile-link" href="{{ path('admin_menu') }}">
                <div class="tile-icon-holder">
                    <i class="fa fa-wrench fa-4x"></i>
                </div>
                <div class="text-holder">
                    <h4>{{ 'menu.manage' | trans }}</h4>
                    <p>{{ 'menu.manage.detail' | trans }}</p>
                </div>
            </a>
        </article>
        {% endif %}
        <article class="col-md-4 tile tile-col-4 tile-gray">
            <a class="tile-link" href="{{ path('logout') }}">
                <div class="tile-icon-holder">
                    <i class="fa fa-power-off fa-4x"></i>
                </div>
                <div class="text-holder">
                    <h4>{{ 'menu.logout' | trans }}</h4>
                    <p>{{ 'menu.logout.detail' | trans }}</p>
                </div>
            </a>
        </article>
    </section>
{% endblock %}
