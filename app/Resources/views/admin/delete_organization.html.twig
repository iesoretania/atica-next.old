{% trans_default_domain 'organization' %}
{% extends 'layout.html.twig' %}
{% import '::macros.html.twig' as m %}

{% block content %}
    <div class="alert alert-warning">{{ 'text.delete_confirm'|trans|nl2br }}</div>
    <form method="post">
        {{ m.submit_button('delete', 'menu.delete'|trans, 'trash', 'btn-danger') }}
