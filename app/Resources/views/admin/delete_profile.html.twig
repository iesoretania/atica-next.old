{% trans_default_domain 'profile' %}
{% extends 'layout.html.twig' %}
{% import '::macros.html.twig' as m %}

{% block content %}
    <div class="alert alert-warning">{{ 'prompt.delete_confirm'|trans|nl2br }}</div>
    <form method="post">
        {{ m.link_button(path('admin_profile_form', {'profile': profile.id}), 'form.delete_back'|trans, 'arrow-left', 'btn-default') }}
        {{ m.submit_button('delete', 'form.delete'|trans, 'trash', 'btn-danger') }}
    </form>
{% endblock %}
