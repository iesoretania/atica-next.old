{% trans_default_domain 'organization' %}
{% extends 'layout.html.twig' %}
{% import '::macros.html.twig' as m %}

{% block content %}
    {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ m.start_button }}
        {% if not new %}
            {{ m.submit_button('submit', 'form.submit'|trans, 'check') }}
            {% if is_granted('ROLE_ADMIN') %}{{ m.link_button(path('admin_delete_organization', {'organization': organization.id}), 'menu.delete'|trans, 'trash', 'btn-danger') }}{% endif %}
        {% else %}
            {{ m.submit_button('submit', 'form.create'|trans, 'plus') }}
        {% endif %}
        {{ m.end_button }}
    {{ form_end(form) }}
    {% if is_granted('ROLE_ADMIN') %}
        {{ m.link_button(path('admin_organizations'), 'menu.back'|trans, 'arrow-left', 'btn-default') }}
    {% else %}
        {{ m.link_button(path('admin_menu'), 'menu.back'|trans, 'arrow-left', 'btn-default') }}
    {% endif %}
{% endblock %}
