{% trans_default_domain 'admin' %}
<table class="table table-bordered table-condensed table-hover table-responsive">
    <thead>
    <tr>
        {{ m.paginator_th(pagination, 'col-md-4', 'p.lastName', 'user.lastName'|trans) }}
        {{ m.paginator_th(pagination, 'col-md-2', 'p.firstName', 'user.firstName'|trans) }}
        {{ m.paginator_th(pagination, 'col-md-3', 'u.email', 'user.email'|trans) }}
        <th class="col-md-3"></th>
    </tr>
    </thead>
    <tbody>
    {% for user in elements %}
        <tr>
            <td>{{ user.person.lastName }}</td>
            <td>{{ user.person.firstName }}</td>
            <td>{{ user.email }}</td>
            <td class="text-center">
                <a href="{{ path('admin_user_form', {'user': user.id}) }}" class="btn btn-default btn-xs"><i class="fa fa-user"></i> {{ 'form.view' | trans }}</a>
                <a href="" class="btn btn-danger btn-xs"><i class="fa fa-sign-out"></i> {{ 'form.unlink' | trans }}</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>
        <th colspan="5">{{ m.paginator_stats(pagination) }}</th>
    </tr>
    </tfoot>
</table>
<div class="navigation">
    {{ knp_pagination_render(elements) }}
</div>
